{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "outDir": "build",
    "lib": ["es2016"],
    "types": ["@gamely/console-types"]
  },
  "tstl": {
    "buildMode": "default",
    "luaTarget": "universal",
    "luaLibImport": "inline",
    "noImplicitGlobalVariables": true,
    "noImplicitSelf": true,
    "noHeader": true,
    "luaPlugins": [
      { "name": "@gamely/tstl-number" },
    ]
  }
}
